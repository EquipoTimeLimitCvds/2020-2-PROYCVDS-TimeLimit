<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.TimeLimit.Persistence.mybatisimpl.mappers.LaboratoriosMapper">
    <resultMap type="Laboratorios" id="LaboratoriosResult">
    	<id property="id" column="id"/>
		<result property="nombre" column="nombre"/>
    	<result property="horario" column="horario"/>
    	<result property="descripcion" column="descripcion"/>
	
    </resultMap>

    <insert id="registrarLaboratorio" parameterType="edu.eci.cvds.TimeLimit.model.Laboratorios">
        INSERT INTO "Laboratorios"(id,nombre,horario,descripcion)
	VALUES((select count(*)+1 from "Laboratorios"),#{nombre},#{horario},#{descripcion});
    </insert>
    
    
    
    
    <select id='consultarLaboratorios' resultMap='LaboratoriosResult' parameterType="map">
        SELECT * FROM "Laboratorio";
    </select>
    	

</mapper>



