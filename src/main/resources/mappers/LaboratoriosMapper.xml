<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.TimeLimit.Persistence.mybatisimpl.mappers.LaboratoriosMapper">
    <resultMap type="Laboratorios" id="LaboratoriosResult">
    	<id property="id" column="id"/>
		<result property="nombre" column="nombre"/>
    	<result property="horario" column="marca"/>
    	<result property="descripcion" column="modelo"/>
	
    </resultMap>
    <select id="getLaboratorio" resultMap="LaboratorioResult" parameterType="String">
        SELECT 
		l.id,
        l.nombre,
        l.horario,
		l.descripcion,
        FROM "Laboratorios" as l
	WHERE nombre = #{nombre}
    </select>

    <insert id="RegistrarLaboratorio" parameterType="map">
        INSERT INTO "Laboratorios"
	VALUES((select count(*)+1 from "Laboratorios"),#{nombre},#{horario},#{descripcion});
    </insert>
    	

</mapper>